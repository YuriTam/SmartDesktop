<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".client.activity.setting.signature.SignatureSettingActivity">

    <include layout="@layout/include_title_bar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <include layout="@layout/item_divider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dp"
        android:layout_marginTop="10.0dp"
        android:paddingLeft="20.0dp"
        android:paddingRight="20.0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/is_support_elec_signature"
            android:textSize="@dimen/size_normal" />

        <com.smart.desktop.common.widget.SwitchButton
            android:id="@+id/check_support_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="-2dp"
            app:sb_checked="true"/>

    </RelativeLayout>

    <include layout="@layout/item_divider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dp"
        android:layout_marginTop="10.0dp"
        android:paddingLeft="20.0dp"
        android:paddingRight="20.0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/is_show_confirm_signature"
            android:textSize="@dimen/size_normal" />

        <com.smart.desktop.common.widget.SwitchButton
            android:id="@+id/check_show_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="-2dp"
            app:sb_checked="true"/>

    </RelativeLayout>c

    <include layout="@layout/item_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12.0dp"
        android:layout_marginTop="12.0dp"
        android:paddingLeft="20.0dp"
        android:paddingRight="20.0dp">

        <TextView
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/signature_time_out"
            android:textSize="@dimen/size_normal" />

        <EditText
            android:id="@+id/et_time_out"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="end"
            android:inputType="number"
            android:textSize="@dimen/size_normal" />

    </LinearLayout>

    <include layout="@layout/item_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12.0dp"
        android:layout_marginTop="12.0dp"
        android:paddingLeft="20.0dp"
        android:paddingRight="20.0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/max_signature_times"
            android:textSize="@dimen/size_normal" />

        <EditText
            android:id="@+id/et_max_times"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:gravity="end"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="@dimen/size_normal" />

    </LinearLayout>

    <include layout="@layout/item_divider"/>

</LinearLayout>