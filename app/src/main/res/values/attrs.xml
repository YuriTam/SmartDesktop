<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 滑动开关自定义属性 -->
    <declare-styleable name="SwitchButton">
        <attr name="sb_shadow_radius" format="reference|dimension"/>
        <attr name="sb_shadow_offset" format="reference|dimension"/>
        <attr name="sb_shadow_color" format="reference|color"/>
        <attr name="sb_uncheck_color" format="reference|color"/>
        <attr name="sb_checked_color" format="reference|color"/>

        <attr name="sb_border_width" format="reference|dimension"/>
        <attr name="sb_checkline_color" format="reference|color"/>
        <attr name="sb_checkline_width" format="reference|dimension"/>
        <attr name="sb_uncheckcircle_color" format="reference|color"/>
        <attr name="sb_uncheckcircle_width" format="reference|dimension"/>
        <attr name="sb_uncheckcircle_radius" format="reference|dimension"/>

        <attr name="sb_checked" format="reference|boolean"/>
        <attr name="sb_shadow_effect" format="reference|boolean"/>
        <attr name="sb_effect_duration" format="reference|integer"/>
        <attr name="sb_button_color" format="reference|color"/>
        <attr name="sb_show_indicator" format="reference|boolean"/>
        <attr name="sb_background" format="reference|color"/>
        <attr name="sb_enable_effect" format="reference|boolean"/>
    </declare-styleable>
    <!-- 左右对齐显示自定义属性 -->
    <declare-styleable name="ItemLinearLayout">
        <attr name="left_text" format="string"/>
        <attr name="right_text" format="string"/>
    </declare-styleable>
    <!-- 左中右对齐显示自定义属性 -->
    <declare-styleable name="ItemLinearAlignLayout">
        <attr name="tv_left_text" format="string"/>
        <attr name="tv_center_text" format="string"/>
        <attr name="tv_right_text" format="string"/>
        <attr name="tv_font_style" format="reference|integer"/>
    </declare-styleable>
    <!-- 列表自定义属性 -->
    <declare-styleable name="ArrowLinearLayout">
        <attr name="icon_src" format="reference"/>
        <attr name="arrow_name" format="string"/>
    </declare-styleable>
    <!-- 密码输入框自定义属性 -->
    <declare-styleable name="PasswordInputView">
        <attr name="borderWidth" format="dimension"/>
        <attr name="borderColor" format="color"/>
        <attr name="borderRadius" format="dimension"/>
        <attr name="passwordLength" format="integer"/>
        <attr name="passwordWidth" format="dimension"/>
        <attr name="passwordColor" format="color"/>
        <attr name="passwordRadius" format="dimension"/>
    </declare-styleable>
    <!-- 下载进度条 -->
    <declare-styleable name="DownloadProgressBar">
        <attr name="text_size" format="dimension"/>
    </declare-styleable>
    <!-- 下载进度按钮 -->
    <declare-styleable name="ProgressButton">
        <attr name="progressColor" format="color" />
    </declare-styleable>
    <!-- 圆角 -->
    <declare-styleable name="RoundImageView">
        <attr name="type" format="enum">
            <enum name="circle" value="1"/>
            <enum name="round" value="2"/>
        </attr>
        <attr name="radius" format="dimension"/>
    </declare-styleable>
    <!-- 图标按钮 -->
    <declare-styleable name="IconButton">
        <attr name="iconPadding" format="dimension"/>
    </declare-styleable>
    <!-- 收银界面 -->
    <declare-styleable name="ReceiptView">
        <attr name="rec_center_text" format="string" />
        <attr name="rec_center_text_size" format="dimension" />
        <attr name="rec_tl_text" format="string" />
        <attr name="rec_tr_text" format="string" />
        <attr name="rec_bl_text" format="string" />
        <attr name="rec_br_text" format="string" />
        <attr name="rec_rect_text_size" format="dimension" />
        <attr name="rec_text_color" format="color" />
        <attr name="rec_radius" format="dimension"/>
        <attr name="rec_padding" format="dimension"/>
        <attr name="rec_adjustment" format="dimension"/>
        <attr name="rec_arc_width" format="dimension"/>
        <attr name="rec_color" format="color" />
        <attr name="rec_gap_width" format="dimension"/>
        <attr name="rec_gap_color" format="color" />
        <attr name="rec_press_color" format="color" />
    </declare-styleable>
</resources>